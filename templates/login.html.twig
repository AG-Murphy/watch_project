{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}



{% block nav %}
    <a class="site-title" href="#" title=" | Home">
        <img src="{{ asset('#') }}" alt="">watch.com
    </a>
{% endblock %}


{% block main %}

    <h3>Connexion</h3>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <form action="{{ path('app_login') }}" method="post">

                    <div class="from-group">
                        <input  placeholder="Pseudo" required name="_username" type="text" class="form-control">
                    </div></br>


                    <div class="from-group">
                        <input  placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                    </div></br>



                    <div class="checkbox mb-3">
                        <label for="remember_me">
                            <input type="checkbox" name="_remember_me"  id="remember_me"> Se souvenir de moi
                        </label>
                    </div></br>


                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>


                </form>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
{% endblock %}
